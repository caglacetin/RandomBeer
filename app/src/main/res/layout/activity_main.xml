<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="mainViewState"
        type="com.caglacetin.randombeer.ui.MainViewState"
        />
    <variable
        name="beerViewState"
        type="com.caglacetin.randombeer.ui.BeerViewState"
        />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".ui.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        tools:text="@tools:sample/lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:visibility="visible"
        app:visibleIf="@{mainViewState.shouldShowErrorMessage}"
        android:text="@{mainViewState.errorMessage.toString()}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        tools:visibility="visible"
        app:visibleIf="@{mainViewState.isLoading}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{beerViewState.beerName}"
        android:textColor="@color/black"
        tools:text="Beer Name"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_beer_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{beerViewState.tagline}"
        android:textColor="@color/black"
        tools:text="Beer Tagline"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_beer_name"
        />

    <androidx.appcompat.widget.AppCompatImageView
        app:imageUrl="@{beerViewState.imageUrl}"
        tools:src="@tools:sample/backgrounds/scenic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/tv_beer_tagline"
        app:layout_constraintStart_toStartOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
